# HVDC Dashboard Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# MODE CONFIGURATION
# =============================================================================
# MODE_A: Client-side DuckDB-WASM with Parquet URLs
# MODE_B: Server-side DuckDB with local file (Recommended for Production)
NEXT_PUBLIC_MODE=B

# =============================================================================
# MODE_A Configuration (Client-side DuckDB-WASM)
# =============================================================================
# Parquet file URLs for client-side loading
# These should be publicly accessible URLs (S3, CDN, etc.)
NEXT_PUBLIC_PARQUET_URL_SKU=https://your-bucket.s3.amazonaws.com/data/SKU_MASTER_v2.parquet
NEXT_PUBLIC_PARQUET_URL_EVENTS=https://your-bucket.s3.amazonaws.com/data/events.parquet
NEXT_PUBLIC_PARQUET_URL_EXCEPTIONS=https://your-bucket.s3.amazonaws.com/data/exceptions_by_sku.parquet

# =============================================================================
# MODE_B Configuration (Server-side DuckDB)
# =============================================================================
# Local DuckDB file path for server-side processing
DUCKDB_PATH=out_recon/sku_master_v2.duckdb

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Default tolerance percentage for 3-way reconciliation
DEFAULT_TOLERANCE_PCT=10

# API timeout settings (milliseconds)
API_TIMEOUT=30000

# Cache settings
CACHE_TTL=300
CACHE_MAX_AGE=120

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug logging
DEBUG=false

# Development server port
PORT=3000

# =============================================================================
# DEPLOYMENT SETTINGS (CI/CD)
# =============================================================================
# DuckDB download URL for CI/CD builds
# This should be a presigned S3 URL or similar secure download link
DUCKDB_DOWNLOAD_URL=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable CORS for specific origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.vercel.app

# API rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Enable performance monitoring
ENABLE_ANALYTICS=false

# Error tracking
SENTRY_DSN=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# AWS S3 Configuration (for MODE_A)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=

# Vercel Configuration
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Webhook URLs
WEBHOOK_URL=

# =============================================================================
# DATA SOURCE SETTINGS
# =============================================================================
# Data refresh interval (minutes)
DATA_REFRESH_INTERVAL=60

# Maximum data age before refresh (minutes)
MAX_DATA_AGE=120

# Enable data validation
ENABLE_DATA_VALIDATION=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable advanced analytics
ENABLE_ADVANCED_ANALYTICS=false

# Enable real-time updates
ENABLE_REALTIME_UPDATES=false